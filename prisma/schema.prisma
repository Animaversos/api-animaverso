generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        Int        @id @default(autoincrement())
  nome      String
  usuario   String     @unique
  senha     String
  email     String     @unique
  cpf       String     @unique
  authTable AuthTable?
  endereco  Endereco?

  @@map("usuario")
}

model AuthTable {
  id                 Int     @id @default(autoincrement())
  refreshToken       String?
  recuperaSenhaToken String?
  usuarioId          Int     @unique
  usuario            Usuario @relation(fields: [usuarioId], references: [id])

  @@map("auth_table")
}

model Endereco {
  id          Int     @id @default(autoincrement())
  usuarioId   Int     @unique
  cep         String
  logradouro  String
  numero      String
  bairro      String
  complemento String?
  localidade  String
  uf          String
  usuario     Usuario @relation(fields: [usuarioId], references: [id])

  @@map("usuario_endereco")
}
