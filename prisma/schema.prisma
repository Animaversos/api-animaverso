generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id           Int            @id @default(autoincrement())
  nome         String
  usuario      String         @unique
  senha        String
  email        String         @unique
  cpf          String         @unique
  refreshToken RefreshToken[]

  @@map("usuario")
}

model RefreshToken {
  id           Int      @id @default(autoincrement())
  refreshToken String
  usuarioId    Int?
  usuario      Usuario? @relation(fields: [usuarioId], references: [id])

  @@map("refresh_token")
}
