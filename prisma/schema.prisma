generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        Int        @id @default(autoincrement())
  nome      String
  usuario   String     @unique
  senha     String
  email     String     @unique
  cpf       String     @unique
  authTable AuthTable?
  pets      Pets[]
  endereco  Endereco?

  @@map("usuario")
}

model AuthTable {
  id                 Int     @id @default(autoincrement())
  usuarioId          Int     @unique @map("id_usuario")
  recuperaSenhaToken String? @map("recupera_senha_token")
  refreshToken       String? @map("refresh_token")
  usuario            Usuario @relation(fields: [usuarioId], references: [id])

  @@map("auth_table")
}

model Endereco {
  id          Int     @id @default(autoincrement())
  logradouro  String
  numero      String
  bairro      String
  complemento String?
  cidadeId    Int     @map("id_cidade")
  estadoId    Int     @map("id_estado")
  usuarioId   Int     @unique @map("id_usuario")
  cidades     Cidades @relation(fields: [cidadeId], references: [id])
  estado      Estados @relation(fields: [estadoId], references: [id])
  usuario     Usuario @relation(fields: [usuarioId], references: [id])

  @@map("usuario_endereco")
}

model Estados {
  id       Int        @id @default(autoincrement())
  nome     String
  uf       String
  id_ibge  Int        @unique
  cidades  Cidades[]
  endereco Endereco[]

  @@map("estados")
}

model Cidades {
  id             Int        @id @default(autoincrement())
  nome           String
  id_ibge        Int        @unique
  id_ibge_estado Int
  estado         Estados    @relation(fields: [id_ibge_estado], references: [id_ibge])
  endereco       Endereco[]

  @@map("cidades")
}

model Pets {
  id         Int     @id @default(autoincrement())
  nome       String
  especie    Especie
  idade      Idade
  peso       Float
  porte      Porte
  genero     Genero
  usuarioId  Int     @map("id_usuario")
  observacao String?
  usuario    Usuario @relation(fields: [usuarioId], references: [id])

  @@map("pets")
}

enum Idade {
  ZERO_A_SEIS_MESES
  SEIS_MESES_A_UM_ANO
  UM_A_DOIS_ANOS
  DOIS_A_CINCO_ANOS
}

enum Especie {
  CACHORRO
  GATO
  OUTROS
}

enum Porte {
  PEQUENO
  MEDIO
  GRANDE
}

enum Genero {
  MASCULINO
  FEMININO
}
